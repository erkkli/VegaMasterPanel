@model SefimV2.ViewModels.SPosKabulIslemleri.BelgeAlisGiderCreate

@{
    Layout = "~/Views/Shared/_LayoutPageSPos.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "")
    @Html.HiddenFor(m => m.Id)

    <div class="form-horizontal">
        <div class="form-group">
            <div class="araadCreateLabel control-label col-md-2">@Html.DisplayNameFor(m => m.BelgeTip)</div>
            <div class="col-md-10">
                @Html.EnumDropDownListFor(m => m.BelgeTip, htmlAttributes: new { @class = "form-control" }, optionLabel: "Seçiniz")
            </div>
        </div>
        <div class="form-group">
            <div class="araadCreateLabel control-label col-md-2">@Html.DisplayNameFor(model => model.Tarih)</div>
            <div class="col-md-10">@Html.TextBoxFor(model => model.Tarih, new { @class = "form-control" })</div>
        </div>
        <div class="form-group">
            <div class="araadCreateLabel control-label col-md-2">@Html.DisplayNameFor(model => model.BelgeNo)</div>
            <div class="col-md-10">@Html.TextBoxFor(model => model.BelgeNo, new { @class = "form-control" })</div>
        </div>
        <div class="form-group text-align-center">
            @*@Html.Back()*@
            <input type="submit" value="Kaydet" class="btn btn btn-success" />
        </div>
    </div>
}
