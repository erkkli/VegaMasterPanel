@model IEnumerable<SefimV2.ViewModels.IskontoDetayRaporuViewModel.IskontoDetayRaporuViewModel>

@{
    decimal TotalTutar = 0;
}


<div class="table-responsive table-responsive-lg">

    <table id="tableDetay" class="table datatable table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.IskontoTarihi)</th>
                <th>@Html.DisplayNameFor(model => model.MasaNo)</th>
                <th>@Html.DisplayNameFor(model => model.Personel)</th>
                <th>@Html.DisplayNameFor(model => model.IskontoAciklamasi)</th>
                <th>@Html.DisplayNameFor(model => model.ToplamSatis)</th>
                <th>@Html.DisplayNameFor(model => model.Discount)</th>
                <th>@Html.DisplayNameFor(model => model.TotalPayment)</th>
                <th>@Html.DisplayNameFor(model => model.DiscountRate)</th>
            </tr>
        </thead>
        <tbody>
            @{
                try
                {
                    foreach (var row in Model)
                    {
                        TotalTutar += row.Discount;

                        var toplamaIndirimOrani = (row.Discount * 100) / (row.TotalPayment != 0 ? (row.TotalPayment + row.Discount) : 1);

                        var backgroundCcolor = @row.MasaNo == "PAKETÇİ" ? "#fee7e4" : "";
                        var debitConvertNameAcikHesap = @row.MasaNo == "DEBIT" ? "AÇIK HESAP" : row.MasaNo;

                        <tr id="row_@row.SubeId" style="color:#000000;font-weight:bold; background-color:@backgroundCcolor ">
                            <td>@row.IskontoTarihi</td>
                            <td>@debitConvertNameAcikHesap </td>
                            <td>@row.Personel</td>
                            <td>@row.IskontoAciklamasi</td>
                            <td> @decimal.Round(row.ToplamSatis, 2, MidpointRounding.AwayFromZero) </td>
                            <td> @decimal.Round(row.Discount, 2, MidpointRounding.AwayFromZero) </td>
                            <td> @decimal.Round(row.TotalPayment, 2, MidpointRounding.AwayFromZero) </td>
                            <td>%   @decimal.Round(toplamaIndirimOrani, 2, MidpointRounding.AwayFromZero) </td>
                        </tr>
                    }
                }
                catch (Exception)
                { }
            }

        </tbody>
        <tfoot>
            <tr class="total" style=" background-color:#337ab7;color:#ffffff; font-weight:bold ">
                <td>TOPLAM</td>
                <td></td>
                <td></td>
                <td></td>
                <td> </td>
                <td> </td>
                <td> </td>
                <td style="text-align:right"> @String.Format("{0:#,###.00;-#,###.00;0}", TotalTutar) </td>
            </tr>
        </tfoot>
    </table>
</div>

