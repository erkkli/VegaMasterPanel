<script>

    $(document).on('click', '#tableDetay tbody td img', function () {
        var oTable = $('#tableDetay').dataTable();
        var nTr = event.target.parentNode.parentNode;

        if (event.target.src.match('details_close')) {
            /* This row is already open - close it */
            event.target.src = "/img/details_open.jpg";
            oTable.fnClose(nTr);
        }
        else {
            /* Open this row */
            event.target.src = "/img/details_close.jpg";
            var productgrup = $(event.target).attr("rel").toString();
            $.get("AdisyonDetails?durum=" + localStorage.durum + "&tarihBas=" + localStorage.tarihBaslangic + "&tarihBitis=" + localStorage.tarihBitis + "&subeid=" + localStorage.subeid + "&productgrup=" + productgrup, function (details) {
                oTable.fnOpen(nTr, details, 'details');
            });
        }
    });





</script>

