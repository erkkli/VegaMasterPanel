                            id = row.VPosId;
                        }
                        else
                        {
                            id = row.Id.ToString();
                        }

                        <tr id="row_@row.SubeId" style="color:#000000;font-weight:bold ">
                            <td id="col_Sube_@id">
                                <img src="~/img/details_open.jpg" rel=@id alt="expand/collapse">
