@model SefimV2.ViewModels.SPosKabulIslemleri.BelgeHareket

<div class="m-content">
    <div class="row" style="margin:10px">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <div id="notification"></div>
                </div>
            </div>
            <div class="m-portlet">
                <div class="m-subheader margin-bottom-10">
                    <div class="d-flex align-items-center">
                        <div class="mr-auto">
                            <h2 class="m-subheader__title m-subheader__title--separator" style="text-align:center;margin-top:1px;margin-bottom:1px">Stok İşlemleri</h2>
                        </div>

                    </div>
                </div>
            </div>
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="araadCreateLabel control-label col-md-8">@Html.DisplayNameFor(model => model.MalinCinsi)</div>
                    <div class="col-md-12">@Html.DropDownListFor(model => model.MalinCinsi, new List<SelectListItem>(), new { @id = "Stok", @class = "form-control m-select2", @style = "width:820px" })</div>
                </div>
                <div class="form-group">
                    <div class="araadCreateLabel control-label col-md-4">@Html.DisplayNameFor(m => m.Birim)</div>
                    <div class="col-md-12">@Html.DropDownListFor(model => model.Birim, new List<SelectListItem>(), new { @id = "Birim", @class = "form-control  m-select2", @style = "width:820px" })</div>
                </div>
                <div class="form-group">
                    <div class="araadCreateLabel control-label col-md-4">@Html.DisplayNameFor(m => m.Fiyat)</div>
                    <div class="col-md-12">@Html.TextBoxFor(model => model.Fiyat, new { @id = "Fiyat", @class = "form -control" })</div>
                </div>
                <div class="form-group">
                    <div class="araadCreateLabel control-label col-md-4">@Html.DisplayNameFor(m => m.Miktar)</div>
                    <div class="col-md-12">@Html.TextBoxFor(model => model.Miktar, new { @id = "Miktar", @class = "form-control" })</div>
                </div>
                <div class="form-group">
                    <div class="araadCreateLabel control-label col-md-4">@Html.DisplayNameFor(m => m.KDV)</div>
                    <div class="col-md-12">@Html.TextBoxFor(model => model.KDV, new { @id = "KDV", @class = "form-control" })</div>
                </div>
                <div class="form-group">
                    <div class="araadCreateLabel control-label col-md-4">@Html.DisplayNameFor(m => m.Tutar)</div>
                    <div class="col-md-12">@Html.TextBoxFor(model => model.Tutar, new { @id = "Tutar", @class = "form-control" })</div>
                </div>
            </div>
            <div class="col-md-offset-5 col-md-7">
                <button type="button" class="btn btn-default" id="btnclose" data-dismiss="modal">Close</button>
                <input value="Kaydet" class="btn btn-lg btn-success btnStokKaydet" onclick="lib.StokKaydet()" />

            </div>


        </div>
    </div>
</div>

