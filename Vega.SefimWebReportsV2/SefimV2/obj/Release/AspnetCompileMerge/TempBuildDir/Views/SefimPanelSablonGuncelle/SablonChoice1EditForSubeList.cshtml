                                                        @Html.HiddenFor(m => Model.ProductList[i].UrunEditPriceList[a].ProductId)
                                                        @Html.HiddenFor(m => Model.ProductList[i].UrunEditPriceList[a].Choice1Id)

                                                        if (Model.ProductList[i].UrunEditPriceList[a].ChoicePrice == null)
                                                        {
