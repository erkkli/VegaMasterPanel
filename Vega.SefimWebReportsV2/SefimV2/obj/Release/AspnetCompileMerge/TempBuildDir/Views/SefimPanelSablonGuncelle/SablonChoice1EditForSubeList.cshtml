                                                                                                                                    productName = Model.ProductOptionsList[i].ProductName,
                                                                                                                                    optionsName = Model.ProductOptionsList[i].OptionsProductName,
                                                                                                                                    subeIdGrupList = Model.SubeIdGrupList
                                                                                                                                })" title="Hızlı options güncelle">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                        @Model.ProductOptionsList[i].OptionsProductName
                                                    </td>

                                                    @for (int a = 0; a < Model.ProductOptionsList[i].UrunEditPriceList.Count; a++)
                                                    {
                                                        @*var price = Model.ProductOptionsList[i].SubeList.Where(y => y.SubeId == Model.SubeList[a].SubeId).FirstOrDefault();
                                                            var priceIndex = Model.ProductOptionsList[i].SubeList.IndexOf(price);
                                                        *@

                                                        @Html.HiddenFor(m => Model.ProductOptionsList[i].UrunEditPriceList[a].Id)
                                                        @Html.HiddenFor(m => Model.ProductOptionsList[i].UrunEditPriceList[a].SubeId)
                                                        @Html.HiddenFor(m => Model.ProductOptionsList[i].UrunEditPriceList[a].ProductId)

                                                        if (Model.ProductOptionsList[i].UrunEditPriceList[a].OptionsPrice == null/* || Model.productOptionsCompairsList[i].SubeList[priceIndex].SubePriceValue == 0*/)
                                                        {
                                                            <td align="center">
                                                                <img src="~/img/noentry.png" />
                                                            </td>
                                                        }
                                                        else
                                                        {
                                                            <td class="yatayoptions_@i dikeyoptions_@a">
                                                                <a class="fa fa fa-arrows-h  btn btn-xs btn-primary btnyayoptions" yatayoptions="@i" dikeyoptions="@a" title="Girilen değeri yatay sütundaki tüm şubelerin fiyatına eşitler."> Yay </a>
                                                                @Html.EditorFor(m => Model.ProductOptionsList[i].UrunEditPriceList[a].OptionsPrice, new { htmlAttributes = new { @class = "form-control decimal_input" } })
                                                            </td>
                                                        }
                                                    }
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                                @*</div>*@
                                <div class="col-md-offset-5 col-md-7">
                                    <button type="submit" value="Kaydet" class="btn btn-success"> Seçenekler Kaydet   </button>
                                </div>
                            </div>
                        }
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
