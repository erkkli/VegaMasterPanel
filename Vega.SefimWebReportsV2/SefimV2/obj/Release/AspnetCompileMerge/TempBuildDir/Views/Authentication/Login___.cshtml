@{
    Layout = null;
}
@model SefimV2.Models.mdlAdmin

@{
    Layout = null;
    var urlHelper = new UrlHelper(Html.ViewContext.RequestContext);
    string baseUrl = urlHelper.Content("~");
}

<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Vega Master Giriş</title>
    <meta name="description" content="Latest updates and statistic charts">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!--begin::Web font -->
    <script src="@(baseUrl)Scripts/webfont.js"></script>    
    <script>
        WebFont.load({
            google: { "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <link rel="shortcut icon" href="@(baseUrl)img/VegaYazilimKucukLogo.png" />
    <link href="~/Assets/css/style.css" rel="stylesheet" />
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <header>
        <div class="row-fluid">
            <div class="col-lg-12">
                <div style="padding:15px;">
                    <div class="text-center">
                        <img src="~/img/SefimLogoKucuk.png" />
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading" style="background-color:#ed1c24; color:white">
                        <h3 class="panel-title" style="text-align:center">Vega Master Giriş</h3>
                    </div>
                    <div class="panel-body">
                        <section class="m-login--2">
                            @using (Html.BeginForm())
                            {
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.UserName, new { placeholder = "Kulanıcı Adı", @class = "form-control" })
                                </div>
                                <div class="clearfix" style="padding-top:40px"></div>
                                <div class="col-md-12">
                                    @Html.PasswordFor(m => m.Password, new { placeholder = "Şifre", @class = "form-control" })
                                </div>
                                <div class="col-md-12 text-center" style="padding-top:30px">
                                    <button type="submit" class="btn btn-lg btn-success btn-block"> Giriş Yap</button>
                                </div>
                                <div class="clearfix"></div>

                                if (Model.ResultBOOL == false)
                                {
                                    <div class="col-md-12 text-center">
                                        <div class="alert alert-danger form-control" role="alert" style="padding:0px;">
                                            @Html.DisplayFor(m => m.ResultSTRING)
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                }
                            }
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <div class="row-fluid">
            <div>
                <p class="text-center">
                    <span style="padding-right:15px;">Copyright © @DateTime.Now.Year Vegayazilim.com.tr</span>
                    <img src="~/img/VegaYazilimKucukLogo.png" style="height:20px; width:20px;" />
                </p>
            </div>
        </div>
    </footer>

</body>
</html>
