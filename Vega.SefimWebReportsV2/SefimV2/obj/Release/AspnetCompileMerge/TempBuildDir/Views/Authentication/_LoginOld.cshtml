    <script>
    function OnSuccess(result) {

        if (result.IsSuccess == true && result.Param1 == 0) {
            SuccessAlert(result.UserMessage);
            localStorage.durum = "bugun";
            window.location = "@Url.Action("/Index", "Dashboard")";
        }
        else if (result.IsSuccess == false && result.Param1 == 5) {
            DangerAlert(result.UserMessage);
            setTimeout(function () { parent.location = "@Url.Action("/LisansCreate", "Authentication")"; }, 2000);
            @*window.location = "@Url.Action("/LisansCreate", "Authentication")";*@
        }
        else if (result.IsSuccess == true && result.Param1 == 2) {
            WarningAlert(result.UserMessage);
        } else {
            DangerAlert(result.UserMessage);
            if (result.ParamStr=="true") {
                window.setTimeout(function () {
                    window.location.reload();
                    //mApp.blockPage();
                }, 5000);
            }
        }
        $('html, body').animate({ scrollTop: 0 }, 'slow');
    }

