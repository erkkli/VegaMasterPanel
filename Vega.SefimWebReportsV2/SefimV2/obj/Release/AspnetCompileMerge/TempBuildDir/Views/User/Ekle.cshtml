    <script src="/Assets/js/bootstrap.js"></script>*@


<script>
    function OnBegin() {
            //mApp.blockPage();
        }
    function OnSuccess(result) {
        var resultObj = JSON.parse(JSON.stringify(result));

        if (resultObj.IsSuccess == true) {
            SuccessAlert(resultObj.UserMessage);
            setTimeout(function () { parent.location = "@Url.Action("List", "User")"; }, 1000);
        } else {
            DangerAlert(resultObj.UserMessage);
        }
    }

    function OnComplete() {
        window.setTimeout(function () {
        //    mApp.unblockPage();
        }, 100);
    }


    $(function () {
        //select2 eklentimizin tanımı
        $('#BelgeTipiYetkiId').select2();
        //hepsiniSec kodlarımız
        $("#hepsiniSec").on("click", function () {
            if ($(this).is(':checked')) {
                $("#BelgeTipiYetkiId > option").prop("selected", "selected");
                $("#BelgeTipiYetkiId").trigger("change");
            } else {
                $("#BelgeTipiYetkiId > option").removeAttr("selected").val(0);
                $("#BelgeTipiYetkiId").trigger("change");
            }
        });
    });



</script>
