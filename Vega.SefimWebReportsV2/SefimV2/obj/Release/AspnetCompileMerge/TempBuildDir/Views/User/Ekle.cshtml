@model SefimV2.ViewModels.User.UserViewModel

@{
    #region base URL bilgisi set ediliyor
    var urlHelper = new UrlHelper(Html.ViewContext.RequestContext);
    string baseUrl = urlHelper.Content("~");
    #endregion

    #region View tanımları
    ViewBag.Title = "";
    string PagecontentClass = "";
    string CloseButton = "";
    string CloseButtonHeader = "";
    string CancelButton = "";

    string Controller = ViewBag.Controller;
    Dictionary<string, string> PageNavi = ViewBag.PageNavi;

    if (ViewBag.Page == "modal")
    {
        Layout = "~/Views/Shared/_Layout_Modal.cshtml";
        PagecontentClass = "modal-page-margintop";
        CloseButton = "<button type='button' data-dismiss='modal' class='btn btn-danger' id='CloseModal'> Vazgeç </button>";
        CloseButtonHeader = "<button type='button' class='close' data-dismiss='modal' aria-hidden='true'></button>";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutPage.cshtml";
        PagecontentClass = "page-content";
        CancelButton = "<a href='" + Url.Action("Index", "User/List") + "' class='btn btn-danger'> Vazgeç </a>";
        <link href="/Assets/css/bootstrap.css" rel="stylesheet" />
        <link href="/Assets/css/custom.css" rel="stylesheet" />
        <link href="/Assets/plugins/fUpload/Uploader-style.css" rel="stylesheet" />
    }
    #endregion
}

<div class="m-content">
    <div class="row">
        <div class="col-lg-12">
            <div id="notification"></div>
        </div>
    </div>
    <div class="row" style="margin:10px">
        <div class="col-lg-12">
            <!--begin::Portlet-->
            <div class="m-portlet">
                <div class="m-portlet__head" style="margin-bottom:20px">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <span class="m-portlet__head-icon m--hide">
                                <i class="la la-gear"></i>
                            </span>
                            <h3 class="m-portlet__head-text">@ViewBag.PageTitle @ViewBag.ActionTitle</h3>
                        </div>
                    </div>
                </div>
                <!--begin::Form-->
                @using (Ajax.BeginForm("Ekle", "User", FormMethod.Post, new AjaxOptions { OnSuccess = "OnSuccess", OnBegin = "OnBegin", OnComplete = "OnComplete" }, htmlAttributes: new { @class = "m-form", @id = "UserEkle" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.ID)

                <div class="m-portlet__body">
                    <div class="form-group m-form__group row">
                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12">Kullanıcı Adı<span class="required"> * </span></label>
                        <div class="col-lg-9 col-md-12 col-sm-12">
                            @Html.TextBoxFor(m => m.UserName, htmlAttributes: new { @id = "KullaniciAdi", @maxlength = "255", @class = "form-control", @placeholder = "Kullanıcı Adı" })
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12">Kullanıcı Adı<span class="required"> * </span></label>
                        <div class="col-lg-9 col-md-12 col-sm-12">
                            @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @id = "Adi", @maxlength = "255", @class = "form-control", @placeholder = "Adı" })
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12">  Şifre <span class="required"> * </span></label>
                        <div class="col-lg-9 col-md-12 col-sm-12">
                            @Html.TextBoxFor(m => m.Password, htmlAttributes: new { @id = "Password", @maxlength = "255", @class = "form-control", @placeholder = "Password" })
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12">Telefon <span class="required"> * </span></label>
                        <div class="col-lg-9 col-md-12 col-sm-12">

                            @Html.TextBoxFor(m => m.Gsm, htmlAttributes: new { @id = "KullaniciTelefon", @maxlength = "255", @class = "form-control", @placeholder = "Telefon" })
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12"> E-Mail <span class="required"> * </span></label>
                        <div class="col-lg-9 col-md-12 col-sm-12">
                            @Html.TextBoxFor(m => m.EMail, htmlAttributes: new { @id = "KullaniciEmail", @maxlength = "255", @class = "form-control", @placeholder = "E-Mail" })
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12"> Belge Tipi Yetki <span class="required"> * </span></label>
                        <div class="col-lg-9 col-md-12 col-sm-12">
                            <select name="BelgeTipiYetkiler" class="form-control m-select2" id="BelgeTipiYetkiId" multiple="multiple" asp-items="ViewBag.BelgeTipList">
                                <option  selected="selected" value="135">Talep Belgesi</option>
                                <option value="93">Sayım Giriş Belgesi</option>
                                <option value="94">Zayi Giriş Belgesi </option>
                                <option value="20">Alış Faturası </option>
                                <option value="165">Gider Faturası </option>
                                <option value="23">İade Faturası </option>
                                <option value="26">Alış İrsaliyesi </option>
                                <option value="29">İade İrsaliyesi </option>
                            </select>
                            @*<select asp-for="Fish.FishCatagories" class="form-control" asp-items="@ViewBag.BelgeTipList"></select>*@
                            @*<select asp-for="@Model.SelectedValue" asp-items="Html.GetEnumSelectList<MyEnum>()">*@
                        </div>
                    </div>
                    <div class="m-form__group form-group row">
                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12"> Durumu <span class="required"> * </span> </label>
                        <div class="col-4">
                            <span class="m-switch m-switch--icon m-switch--accent">
                                <label>
                                    @*@Html.CheckBoxFor(m => m.Status, htmlAttributes: new { @checked = "checked" })*@
                                    <span></span>
                                </label>
                            </span>
                        </div>
                    </div>
                </div>
                    <div class="m-portlet__foot m-portlet__foot--fit">
                        <div class="m-form__actions m-form__actions">
                            <button type="submit" class="btn btn-primary">Kaydet </button>
                            @Html.Raw(CancelButton)
                            @Html.Raw(CloseButton)
                        </div>
                    </div>
                }
                <!--end::Form-->
            </div>
            <!--end::Portlet-->
        </div>
    </div>
</div>

