@model IEnumerable<SefimV2.ViewModels.SubeSettings.SubeSettingsViewModel>


@{
    Layout = "~/Views/Shared/_LayoutPageSPos.cshtml";
}


<div class="m-content">
    <div class="row">
        <div class="col-lg-12">
            <div id="notification"></div>
        </div>
    </div>
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h2 class="m-subheader__title m-subheader__title--separator" style="text-align:center;margin-top:1px;margin-bottom:1px">SPos Main</h2>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="table-responsive">
            <div class="table-container">
                <div class="x_content">
                    <table id="tableRapor" class="table table-hover table-bordered">
                        <thead>
                            <tr style="background: #fffaf0">
                                <th style="width:20px">Düzenle</th>
                                <th>Şube Adı</th>
                                <th>Database Adı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a class="btn btn-success" href="@Url.Action("Ekle", "SubeSettings", new { ID = item.ID})">
                                                Düzenle
                                            </a>
                                        </td>
                                        <td> @item.SubeName  </td>
                                        <td> @item.DBName </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

