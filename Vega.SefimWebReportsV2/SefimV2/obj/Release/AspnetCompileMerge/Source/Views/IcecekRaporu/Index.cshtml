    }
    function urunlereGore() {
        var theData = {
            StartDate: $("#dateGecerlilikTarihi").val(),
            EndDate: $("#dateBitisTarihi").val(),
            URUNGRUBU: URUNGRUBU,
            URUNADI: URUNADI,
            SUBEADI: SUBEADI,
            SATISTIPI: SATISTIPI
        }
        $("#UrunlereGore tbody").html("");
        $.ajax({
            url: '/IcecekRaporu/UrunlereGore',
            type: 'GET',
            beforeSend: function (request) {

            },
            complete: function (data) {
