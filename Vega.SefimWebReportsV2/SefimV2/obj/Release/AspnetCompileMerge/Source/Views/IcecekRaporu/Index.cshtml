            success: function (data) {
                var result = JSON.parse(data);
                for (var i = 0; i < result.length; i++) {
                    $("#SubelereGore tbody").append("<tr onclick=' SUBEADI += \"" + result[i]["SUBEADI"] + ",\"; searchFilterShow();'><td>" + result[i]["SUBEADI"] + "</td><td class='text-right'> " + formatCurrency(result[i]["Miktar"]) + "</td></tr>");
                }
                runDatatable("SubelereGore");

            }
        });
    }
    function satisTipineGore() {
        var theData = {
            StartDate: $("#dateGecerlilikTarihi").val(),
            EndDate: $("#dateBitisTarihi").val(),
            URUNGRUBU: URUNGRUBU,
            URUNADI: URUNADI,
            SUBEADI: SUBEADI,
            SATISTIPI: SATISTIPI
        }
        $("#SatisTipineGore tbody").html("");
        $.ajax({
            url: '/IcecekRaporu/SatisTipineGore',
            type: 'GET',
            beforeSend: function (request) {

            },
            complete: function (data) {
                isLoading()
            },
            dataType: 'text',
            data: theData,
            success: function (data) {
                var result = JSON.parse(data);
                for (var i = 0; i < result.length; i++) {
                    $("#SatisTipineGore tbody").append("<tr><td>" + result[i]["SUBEADI"] + "</td><td>" + result[i]["SatisTipi"] + "</td><td class='text-right'> " + formatCurrency(result[i]["Miktar"]) + "</td></tr>");
                }
                runDatatable("SatisTipineGore");

            }
