            success: function (data) {
                var result = JSON.parse(data);
                for (var i = 0; i < result.length; i++) {
                    $("#UrunlereGore tbody").append("<tr onclick=' URUNADI += \"" + result[i]["ProductName"] + ",\"; searchFilterShow();'><td>" + result[i]["ProductName"] + "</td><td class='text-right'>" + result[i]["KS"] + "</td><td class='text-right'> " + formatCurrency(result[i]["MIKTAR"]) + "</td></tr>");
                }
                runDatatable("UrunlereGore");

            }
        });
    }
    function toplamIcecekSatislari() {
        var theData = {
            StartDate: $("#dateGecerlilikTarihi").val(),
            EndDate: $("#dateBitisTarihi").val(),
            URUNGRUBU: URUNGRUBU,
            URUNADI: URUNADI,
            SUBEADI: SUBEADI,
            SATISTIPI: SATISTIPI
        }
        $("#ToplamIcecekSatislari tbody").html("");
        $.ajax({
            url: '/IcecekRaporu/ToplamIcecekSatislari',
            type: 'GET',
            beforeSend: function (request) {

            },
            complete: function (data) {
                isLoading()
            },
            dataType: 'text',
            data: theData,
            success: function (data) {
                var result = JSON.parse(data);
                var urunAdlari = [];
                var subeAdlari = [];

                for (var i = 0; i < result.length; i++) {
                    if (urunAdlari.find(x => x == result[i].ÜrünAdi) == undefined) {
                        urunAdlari.push(result[i].ÜrünAdi)
                    }
                    if (subeAdlari.find(x => x == result[i].SUBEADI) == undefined) {
                        subeAdlari.push(result[i].SUBEADI)
                    }
                }
                for (var i = 0; i < urunAdlari.length; i++) {
                    $("#ToplamIcecekSatislari thead tr").append("<th>" + urunAdlari[i] + "</th>");
                }

                for (var i = 0; i < subeAdlari.length; i++) {
                    var temp = "<tr><td>" + subeAdlari[i] + "</td>";
                    for (var j = 0; j < urunAdlari.length; j++) {
                        var isValue = (result.find(x => x.SUBEADI == subeAdlari[i] && x.ÜrünAdi == urunAdlari[j]));
                        temp += "<td class='text-right'>" + (isValue == undefined ? "0" : isValue.Miktar) + "</td>";
                    }
                   
                    temp += "</tr>";
                    $("#ToplamIcecekSatislari tbody").append(temp);

                }



                runDatatable("ToplamIcecekSatislari");

            }
        });
    }

</script>
