@{
    var headerText = ViewBag.ModalId + "HeaderText";
    var bodyId = ViewBag.ModalId + "Body";
}
<div class="modal fade bs-example-modal-lg" id="@ViewBag.ModalId" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <span class="modal-title" id="@headerText"></span>
                <a class="pull-right txt-color-white" data-dismiss="modal" aria-label="Close" title="Kapat">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </a>
            </div>
            <div class="modal-body padding-12" style="overflow-y:auto;max-height:1000px" id="@bodyId">
            </div>
        </div>
    </div>
</div>