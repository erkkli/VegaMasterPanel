<link href="~/Content/ContentSefPanel/css/costomfieldset/customfielset.css" rel="stylesheet" />

<div class="m-content">
    <div class="row">
        <div class="col-lg-12">
            <div id="notification"></div>
        </div>
    </div>
    <div class="row" style="margin:10px">
        <div class="col-lg-12">
            <!--begin::Portlet-->
            <div class="m-portlet">
                <fieldset class="well  the-fieldset ">
                    <legend class="the-legend">@ViewBag.PageTitle @ViewBag.ActionTitle </legend>

                    @using (Ajax.BeginForm("Ekle", "UsersList", FormMethod.Post, new AjaxOptions { OnSuccess = "OnSuccess", OnBegin = "OnBegin", OnComplete = "OnComplete" }, htmlAttributes: new { @class = "m-form", @id = "UsersListEkle" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.ID)
                <div class="m-portlet__body">
                    <div class="form-group m-form__group row">
                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12">Kullanıcı Adı<span class="required"> * </span></label>
                        <div class="col-lg-9 col-md-12 col-sm-12">
                            @Html.TextBoxFor(m => m.UserName, htmlAttributes: new { @id = "KullaniciAdi", @maxlength = "255", @class = "form-control", @placeholder = "Kullanıcı Adı" })
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12">Adı<span class="required"> * </span></label>
                        <div class="col-lg-9 col-md-12 col-sm-12">
                            @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @id = "Adi", @maxlength = "255", @class = "form-control", @placeholder = "Adı" })
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12">Şifre <span class="required"> * </span></label>
                        <div class="col-lg-9 col-md-12 col-sm-12">
                            @Html.TextBoxFor(m => m.Password, htmlAttributes: new { @id = "Password", @maxlength = "255", @class = "form-control", @placeholder = "Password" })
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12">Telefon <span class="required"> * </span></label>
                        <div class="col-lg-9 col-md-12 col-sm-12">

                            @Html.TextBoxFor(m => m.Gsm, htmlAttributes: new { @id = "KullaniciTelefon", @maxlength = "255", @class = "form-control", @placeholder = "Telefon" })
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12">E-Mail <span class="required"> * </span></label>
                        <div class="col-lg-9 col-md-12 col-sm-12">
                            @Html.TextBoxFor(m => m.EMail, htmlAttributes: new { @id = "KullaniciEmail", @maxlength = "255", @class = "form-control", @placeholder = "E-Mail" })
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12">Yetki Seç <span class="required"> * </span></label>
                        <div class="col-lg-9 col-md-12 col-sm-12">
                            @Html.DropDownListFor(m => m.YetkiNesneId, new List<SelectListItem>(), new { @id = "YetkiNesneId", @class = "form-control m-select2" })
                        </div>
                    </div>

                    <div class="form-group m-form__group row">
                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12">Aktif Şube <span class="required"> * </span></label>
                        <div class="col-lg-9 col-md-12 col-sm-12">
                            @Html.DropDownListFor(m => m.SubeID, new List<SelectListItem>(), new { @id = "SubeId", @class = "form-control m-select2" })
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12">Uygulama Seç <span class="required"> * </span></label>
                        <div class="col-lg-9 col-md-12 col-sm-12">
                            @Html.EnumDropDownListFor(m => m.UygulamaTipi, "Seçiniz", new { @id = "SubeId", @class = "form-control m-select2" })
                        </div>
                    </div>
