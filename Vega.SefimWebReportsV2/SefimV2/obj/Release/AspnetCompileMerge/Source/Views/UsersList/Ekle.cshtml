                                        <option value="94" selected>Zayi Giriş Belgesi </option>
                                    }
                                    else
                                    {
                                        <option value="94">Zayi Giriş Belgesi </option>
                                    }


                                    if (ViewBag.BelgeTipiYetkiler.IndexOf("Alış Faturası") > -1)
