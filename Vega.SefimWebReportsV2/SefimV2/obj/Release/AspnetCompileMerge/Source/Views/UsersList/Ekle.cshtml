<script>

    $(document).ready(function () {
        $("#AllCheckAuth").click(function () {
            var checked_status = this.checked;
            $("input[name='Auth']").each(function () {
                $("input:checkbox[name=Auth]").prop("checked", checked_status);
            });
        });
    });

    function SubelerList() {
     $.ajax({
        url: '/UsersList/SubelerListJson',
        type: 'POST',
        beforeSend: function (request) {
            //mApp.blockPage();
        },
        complete: function () {
        window.setTimeout(function () {
                //mApp.unblockPage();
            }, 100);
        },
        dataType: 'json',
        success: function (data) {
            var options = $('#SubeId');
            $('option', options).remove();
            options.append($('<option />').val(0).text("Seçiniz"));
            $.each(data, function () {
            options.append($('<option />').val(this.Value).text(this.Text));
            });
            if(@Model.SubeID > 0){
                $('#SubeId').val('@Model.SubeID').trigger('change');
            } else { $('#SubeId').val('0').trigger('change'); }
        }
    });
}
    SubelerList();

    function SubeYetkiListJson() {
        var data = { ID: @Model.ID }
            $.ajax({
                url: '/UsersList/SubeYetkiListJson',
                type: 'POST',
                data: data,
                beforeSend: function (request) {
                    //mApp.blockPage();
                },
                complete: function () {
                window.setTimeout(function () {
                        //mApp.unblockPage();
                    }, 100);
                },
                dataType: 'json',
                success: function (data) {
                    $("input:checkbox[name=Auth]").prop("checked", false);
                    if (data.YetkiListesi != null) {
                        var array = data.YetkiListesi.substring(0, data.YetkiListesi.length - 1).split(',');
                        $.each(array, function (key, value) {
                            $("#auth_" + value).prop("checked", true);
                        });
                    }
                }
            });
        }
    SubeYetkiListJson();

