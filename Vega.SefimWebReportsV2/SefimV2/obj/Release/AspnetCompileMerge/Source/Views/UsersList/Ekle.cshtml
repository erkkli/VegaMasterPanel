                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12"> Belge Tipi Yetkisi <span class="required"> * </span></label>
                        <div class="col-lg-9 col-md-12 col-sm-12">

                            <select name="BelgeTipiYetkiler" class="form-control m-select2" id="BelgeTipiYetkiId" multiple="multiple" asp-items="ViewBag.BelgeTipiYetkiler">
                                @if (ViewBag.BelgeTipiYetkiler != null)
                                {
                                    if (ViewBag.BelgeTipiYetkiler.IndexOf("Talep Belgesi") > -1)
                                    {
                                        <option value="135" selected>Talep Belgesi</option>
                                    }
                                    else
