                                        <option value="23">İade Faturası </option>
                                    }


                                    if (ViewBag.BelgeTipiYetkiler.IndexOf("Alış İrsaliyesi") > -1)
                                    {
                                        <option value="26" selected>Alış İrsaliyesi </option>
                                    }
                                    else
                                    {
                                        <option value="26">Alış İrsaliyesi </option>
                                    }


                                    if (ViewBag.BelgeTipiYetkiler.IndexOf("İade İrsaliyesi") > -1)
                                    {
                                        <option value="29" selected>İade İrsaliyesi </option>
                                    }
                                    else
                                    {
                                        <option value="29">İade İrsaliyesi </option>
                                    }


                                    if (ViewBag.BelgeTipiYetkiler.IndexOf("Sayım Giriş Belgesi") > -1)
                                    {
                                        <option value="93" selected>Sayım Giriş Belgesi</option>
                                    }
                                    else
                                    {
                                        <option value="93">Sayım Giriş Belgesi</option>
                                    }

                                    if (ViewBag.BelgeTipiYetkiler.IndexOf("Depo Transfer") > -1)
                                    {
                                        <option value="128" selected>Depo Transfer</option>
                                    }
                                    else
                                    {
                                        <option value="128">Depo Transfer</option>
                                    }

                                    if (ViewBag.BelgeTipiYetkiler.IndexOf("Depo Transfer Kabul") > -1)
                                    {
                                        <option value="129" selected>Depo Transfer Kabul</option>
                                    }
                                    else
                                    {
                                        <option value="129">Depo Transfer Kabul</option>
                                    }

                                }
                                else
                                {
                                    <option value="135">Talep Belgesi</option>
                                    <option value="94">Zayi Giriş Belgesi </option>
                                    <option value="20">Alış Faturası </option>
                                    <option value="165">Gider Faturası </option>
                                    <option value="23">İade Faturası </option>
                                    <option value="26">Alış İrsaliyesi </option>
                                    <option value="29">İade İrsaliyesi </option>
                                    <option value="93">Sayım Giriş Belgesi</option>
                                    <option value="128">Depo Transfer </option>
                                    <option value="129">Depo Transfer Kabul </option>
                                }

                            </select>
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12">Şube Yetkisi </label>
                        <div class="col-lg-9 col-md-12 col-sm-12">
                            <div class="m-checkbox-inline">
                                @{
                                    if (Model.FR_SubeListesi != null)
                                    {
                                        foreach (var item in Model.FR_SubeListesi)
                                        {
                                            <div class="col-lg-2">
                                                <label class="m-checkbox " style="margin-right:5px">
                                                    <input type="checkbox" name="Auth" id="auth_@item.SubeID" value="@item.SubeID">
                                                    @item.SubeName
                                                </label>
                                            </div>
                                        }
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="m-form__group form-group row">
                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12"> Şube Sırası <span class="required">  </span> </label>
                        <div class="col-4">
                            <span class="m-switch m-switch--icon m-switch--accent">
                                <label>
                                    @Html.CheckBoxFor(m => m.SubeSirasiGorunsunMu, htmlAttributes: new { @checked = "checked" })
                                    <span></span>
                                </label>
                            </span>
                        </div>
                    </div>
                    <div class="m-form__group form-group row">
                        <label class="col-form-label col-md-3 col-sm-3 col-xs-12"> Durumu <span class="required"> * </span> </label>
                        <div class="col-4">
                            <span class="m-switch m-switch--icon m-switch--accent">
                                <label>
                                    @Html.CheckBoxFor(m => m.Status, htmlAttributes: new { @checked = "checked" })
                                    <span></span>
                                </label>
                            </span>
                        </div>
                    </div>
                </div>
                        <div class="m-portlet__foot m-portlet__foot--fit">
                            <div class="m-form__actions m-form__actions">
                                @Html.Raw(CancelButton)
                                @Html.Raw(CloseButton)
                                <button type="submit" class="btn btn-success">Kaydet </button>
                            </div>
                        </div>
                    }
                    <!--end::Form-->
                </fieldset>
            </div>
            <!--end::Portlet-->
        </div>
    </div>
</div>

