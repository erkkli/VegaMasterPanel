                    var successUrl = $(this).find("#successUrl").val();
                }).modal('show');
            }

            if ('@TempData["WarningMessage"]' != "") {
                $('#modalWarning').on('show.bs.modal', function () {
                    var successUrl = $(this).find("#successUrl").val();
                }).modal('show');
            }

            if ('@TempData["SuccessMessage"]' != "") {
                $('#modalSuccess').on('show.bs.modal', function () {
                    var successUrl = $(this).find("#successUrl").val();
                }).modal('show');
            }
        })
</script>
